{
    "name": "laravel-goto-path",
    "displayName": "Laravel Goto Path",
    "description": "Quick jump to path",
    "version": "0.1.0",
    "publisher": "ctf0",
    "engines": {
        "vscode": "^1.68.0"
    },
    "repository": "https://github.com/ctf0/laravel-goto-path",
    "icon": "images/logo.png",
    "categories": [
        "Other"
    ],
    "keywords": [
        "PHP",
        "Laravel",
        "goto",
        "file navigation"
    ],
    "activationEvents": [
        "onLanguage:php",
        "onLanguage:blade",
        "onUri",
        "onStartupFinished"
    ],
    "main": "./out/main",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Laravel Goto Path",
            "properties": {
                "laravelGotoPath.list": {
                    "type": "object",
                    "default": {
                        "base_path": "/",
                        "app_path": "/app",
                        "config_path": "/config",
                        "database_path": "/database",
                        "public_path": "/public",
                        "resource_path": "/resources",
                        "storage_path": "/storage",
                        "mix": "/public",
                        "asset": "/public",
                        "global_asset": "/public",
                        "secure_asset": "/public"
                    },
                    "minItems": 1,
                    "uniqueItems": true,
                    "description": "methods to search for"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run esbuild-base -- --minify",
        "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
        "esbuild": "npm run esbuild-base -- --sourcemap",
        "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
        "watch": "npm run vscode:prepublish",
        "test-compile": "tsc -p ./"
    },
    "devDependencies": {
        "@types/glob": "^8.0.0",
        "@types/node": "^18.11.9",
        "@types/vscode": "^1.68.0",
        "glob": "^8.0.3",
        "esbuild": "^0.15.13",
        "typescript": "^4.8.4"
    },
    "dependencies": {
        "escape-string-regexp": "^5.0.0",
        "lodash": "^4.17.21"
    }
}
